
<div class="row justify-content-center">
  <div class="col-10">
  </div>
  <div class="card">
    <div class="card-body">
      <form action="/posts/{{post_id}}/comments" method="POST">
        <h4 class="card-title text-center">Write a new comment</h4>
        <textarea rows="5" cols="50" name="message" required></textarea>
        <br>
        <div class="text-center">
          <button type="submit" class="btn btn-primary" value="submit">Submit</button>
      </div>
      </form>
    </div>
  </div>
</div>
