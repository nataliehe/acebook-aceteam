<div class="row justify-content-center">
  <div class="col-2">
  </div>

  <div class="card col-6">
    <div class="card-body">
      <form action="/posts" method="POST">
        <h4 class="card-title text-center">Write a new message </h4>
        <textarea rows="4" cols="80" name="message" required></textarea>
        <input type="hidden" name="user" value={{user}}>
        <br>
        <div class="text-center">
          <button type="submit" class="btn btn-primary" value="submit">Submit</button>
      </div>
      </form>

      <!-- <div class="dropdown-divider"></div> -->

      <ul class="posts" style="list-style: none;" >
        {{#each posts}}
        <hr>
        <li>
          <p><span id="username">{{this.user}}</span>
            <span id="created"> {{this.created}}</span>
          </p>
          <pre class="message">{{this.message}}</pre>
            <a href="/posts/{{this.id}}/comments/new">
              <button class="btn btn-warning btn-sm py-0" style="font-size: 0.8em">
                Add Comment
              </button>
            </a>
            <br>
            <hr>
            <ul>
              {{#each this.comments}}
              <li style="list-style: none;"> <pre class="message">{{message}}</pre></li>
              <hr/>
              {{/each}}
            </ul>
        </li>

        {{/each}}
      </ul>
    </div>
  </div>

  <div class="col-2">
  </div>
</div>
