
<div class="row justify-content-center">
  <div class="col-10">
  </div>

<div class="card">
  <div class="card-body">
    <form action="/" method="POST">
      <h3 class="card-title">Write a new message</h3>
      <input type="text" name="message" required>
      <button type="submit" class="btn btn-primary" value="submit">Submit</button>
    </form>

    <div class="dropdown-divider"></div>

    <ul class="posts" style="list-style: none;" >
      {{#each posts}}
      <li >{{this.message}}
        <p style="font-style: italic;">{{this.created}}</p>
          <a href="/posts/{{this.id}}/comments/new">
            <button class="btn btn-warning btn-sm py-0" style="font-size: 0.8em">
              Add Comment
            </button>
          </a>
          <ul>
            {{#each this.comments}}
            <li style="list-style: none;"> {{message}} </li>
            <hr/>
            {{/each}}
          </ul>
      </li>
      <hr/>
      {{/each}}
    </ul>
  </div>
</div>

